- provide :title, "Listing Tasks"

%table
  %tr
    %th User
    %th Client
    %th Name
    %th Notes
    %th Status
    %th Complexity
    %th Priority
    %th Due date
    %th Rate
    %th{colspan: 3} Actions

  - @tasks.each do |task|
    - @current_class = task
    %tr
      %td= task.user
      %td= task.client
      %td= task.name
      %td= task.notes
      %td= human_status task
      %td= human_complexity task
      %td= task.priority
      %td= task.due_date
      %td= task.rate
      = render 'common/index_links'

%br

= link_to 'New Task', new_task_path
