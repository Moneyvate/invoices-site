= simple_form_for(@contact) do |f|
  = f.error_notification
  %fieldset
    %legend= content_for?(:title) ? yield(:title) : "Untitled"
    .form-inputs
      = f.association :contact_type
      = f.association :client
      = f.input :name
      = f.input :title
      = f.input :email
      = f.input :phone, as: :integer
      = f.input :skype
      = f.input :im, label: 'IM'
    .form-actions
      = f.button :submit
